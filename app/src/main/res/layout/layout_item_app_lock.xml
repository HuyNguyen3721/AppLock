<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:layout_weight="10"
    android:background="?android:attr/selectableItemBackground"
    android:paddingStart="@dimen/_5sdp"
    android:paddingEnd="@dimen/_15sdp">

    <ImageView
        android:id="@+id/ic_app"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_weight="2"
        android:padding="@dimen/_10sdp" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ic_app"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.757">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/txt_name_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/color_363636"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:minTextSize="@dimen/_12sdp" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/description_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/color_A8A8A8"
            android:textSize="@dimen/_12sdp"
            app:minTextSize="@dimen/_5sdp" />
    </LinearLayout>

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/ic_locked"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_lock" />
</LinearLayout>